package MainFrame;


import MainFrame.MainMenu;
import Button.TheButtonP;
import Draw.TheDrawP;
import Draw.ThePaintP;
import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.Container;
import javax.swing.JFrame;

/**
 * @author Jachi Madubuko
 * @author Sam Knox
**/

public class TheWindowF extends JFrame 
{
    public static TheWindowF inst;

    TheWindowF() 
    {
        super("MainFrame");
        setSize(500, 500);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        Container c = getContentPane();
        setBackground(Color.WHITE);
        c.add(TheButtonP.getInstance(), BorderLayout.WEST);
        c.add(TheDrawP.getInstance(), BorderLayout.CENTER);
        c.add(MainMenu.getInstance(), BorderLayout.NORTH);
        setVisible(true);
    }
    
    public static TheWindowF getInstance()
    {
        if(inst == null)
            inst = new TheWindowF();
        return inst;
    }   
}
